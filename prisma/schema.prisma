generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ServerData {
  id                   Int                   @id @default(autoincrement())
  serverId             String                @unique @db.Char(32)
  serverName           String                @db.VarChar(100)
  channelConfiguration ChannelConfiguration?
}

model ChannelConfiguration {
  id          Int        @id @default(autoincrement())
  channelId   String     @default("0") @db.Char(32)
  idServer    String     @unique @db.Char(32)
  serverData  ServerData @relation(fields: [idServer], references: [serverId])
  channelName String     @default("general") @db.VarChar(100)
}
